[alias]
    st = status
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    a = add -A :/
    ls = log --oneline
    caa = commit -a --amend -C HEAD
    cm = commit -m
    cam = commit -am
    pom = push origin master
    co = checkout
    cob = checkout -b
[init]
    defaultBranch = main
[branch]
    sort = -committerdate
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    autocrlf = false
[color]
    ui = true
[column]
    ui = auto
[commit]
    verbose = true
[log]
    date = iso
    decorate = short
    graph = true
    abbrevCommit = true
    pretty = format:%C(auto)%h %C(auto)%ad | %C(auto)%s%d [%C(auto)%an]
[merge]
    tool = vimdiff
    conflictstyle = diff3  # TODO: change to zdiff3 when git > 2.35
[diff]
    tool = vimdiff
    algorithm = histogram
[push]
    default = simple
[pull]
    ff = only
[rerere]
    enabled = true
[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
[protocol "file"]
    allow = always
